#!/bin/bash
ROOT_PATH=`dirname $0`
FILE_NAME="/.youker"
FILE_PATH=${HOME}${FILE_NAME}
echo $FILE_PATH
if [ -e $FILE_PATH ];then
    pwd=`sed -n '1p' $FILE_PATH`
    echo $pwd
    ROOT_PATH="/usr/lib/python2.7/dist-packages/youker-assistant-daemon"
    echo $pwd | sudo -S python $ROOT_PATH/src/youker-assistant-systemdbus.py
fi
