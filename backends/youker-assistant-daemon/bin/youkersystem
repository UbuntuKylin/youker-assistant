#!/bin/bash
ROOT_PATH=`dirname $0`
if [ -e "/usr/share/youker-assistant-daemon" ];then 
	#ROOT_PATH="/usr/share/youker-assistant-daemon"
    ROOT_PATH="/usr/lib/python2.7/dist-packages/youker-assistant-daemon"
    echo $1 | sudo -S python $ROOT_PATH/src/youker-assistant-systemdbus.py
else   
    cd $ROOT_PATH
    echo $1 | sudo -S python ../src/youker-assistant-systemdbus.py
fi


