<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
"-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
"http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">
<policyconfig>
  <vendor>The UbuntuKylin Shred File Authentication</vendor>
  <vendor_url>http://www.ubuntukylin.com</vendor_url>

  <action id="org.freedesktop.ukshred.authentication">
    <description>Authentication for Administrator</description>
    <message>Authentication is required for UbuntuKylin shred file</message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
  </action>
</policyconfig>

